{
	"name": "@readmeseemore/svelte-language-server",
	"type": "module",
	"private": false,
	"version": "0.0.52",
	"main": "src/index.ts",
	"bin": "src/cli.ts",
	"publishConfig": {
		"access": "public",
		"main": "./dist/index.js",
		"typings": "./dist/index.d.ts",
		"bin": "./dist/cli.js",
		"exports": {
			".": {
				"types": "./dist/index.d.ts",
				"import": "./dist/index.js",
				"require": "./dist/index.umd.cjs"
			}
		}
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build:lib": "vite build",
		"build:cli": "vite build --config vite.cli.config.ts",
		"build": "pnpm run build:lib && pnpm run build:cli",
		"run:": "npx tsx src/cli.ts",
		"test": "vitest",
		"test:run": "vitest run",
		"prepublishOnly": "pnpm test:run && pnpm build && npm version patch --git-tag-version false && pnpm build:cli",
		"postpublish": "git add ./package.json && git commit -m \"bump version: $(basename $(pwd))\" && git push"
	},
	"devDependencies": {
		"@types/express": "^5.0.1",
		"@types/node": "^22.13.10",
		"@types/ws": "^8.18.1",
		"typescript": "^5.8.2",
		"vite": "^6.2.1",
		"vite-plugin-dts": "^4.5.3",
		"vite-plugin-externalize-deps": "^0.9.0",
		"vitest": "^3.0.8"
	},
	"dependencies": {
		"@commander-js/extra-typings": "^13.1.0",
		"express": "^5.1.0",
		"svelte-language-server": "^0.17.11",
		"vscode-jsonrpc": "^8.2.1",
		"vscode-languageserver-protocol": "^3.17.5",
		"vscode-ws-jsonrpc": "^3.4.0",
		"ws": "^8.18.1"
	}
}
