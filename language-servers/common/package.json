{
	"name": "@readmeseemore/language-servers-common",
	"type": "module",
	"private": false,
	"license": "MIT",
	"version": "0.0.1",
	"main": "src/index.ts",
	"bin": "src/cli.ts",
	"publishConfig": {
		"access": "public",
		"main": "./dist/index.js",
		"typings": "./dist/index.d.ts",
		"exports": {
			".": {
				"types": "./dist/index.d.ts",
				"import": "./dist/index.js"
			}
		}
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "vite build",
		"test": "vitest",
		"test:run": "vitest run",
		"prepublishOnly": "pnpm test:run && pnpm build && npm version patch --git-tag-version false",
		"postpublish": "git add ./package.json && git commit -m \"bump version: $(basename $(pwd))\" && git push"
	},
	"devDependencies": {
		"@types/node": "^22.14.0",
		"typescript": "^5.8.2",
		"vite": "^6.2.1",
		"vite-plugin-dts": "^4.5.3",
		"vite-plugin-externalize-deps": "^0.9.0",
		"vitest": "^3.0.8"
	},
	"dependencies": {
		"@commander-js/extra-typings": "^13.1.0",
		"@readmeseemore/language-servers-interop": "workspace:^",
		"vscode-jsonrpc": "^8.2.1",
		"vscode-languageserver-protocol": "^3.17.5",
		"vscode-ws-jsonrpc": "^3.4.0"
	}
}
